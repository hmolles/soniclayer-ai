modules = ["bash", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "libxcrypt", "pkg-config", "xsimd", "redis"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "redis"

[[workflows.workflow]]
name = "web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_backend.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "redis"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./run_redis.sh"
waitForPort = 6000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6000
externalPort = 6000

[[ports]]
localPort = 6379
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["python", "start_app.py"]
